{% extends "layout.twig" %}

{% block head_links %}
    {% for url in entrypoints('website', 'css') %}
        <link rel="stylesheet" href="{{ url }}">
    {% endfor %}
{% endblock %}

{% block body_scripts %}
    {% for url in entrypoints('website', 'js') %}
        <script src="{{ url }}"></script>
    {% endfor %}
{% endblock %}

{% block title %}Intranet - GEPWNAGE LAN{% endblock %}

{% block content %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-gepwnage-blue">
        <div class="container">
            <a href="/" class="navbar-brand">
                GEPWNAGE LAN 2019
            </a>
            <button
                class="navbar-toggler"
                type="button"
                data-toggle="collapse"
                data-target="#navbarNav"
                aria-controls="navbarNav"
                aria-expanded="false"
                aria-label="Toggle navigation"
            >
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item{{ nav_active == 'home' ? ' active' : '' }}">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item{{ nav_active == 'tournaments' ? ' active' : '' }}">
                        <a class="nav-link" href="/tournaments">Tournaments</a>
                    </li>
                    <li class="nav-item{{ nav_active == 'schedule' ? ' active' : '' }}">
                        <a class="nav-link" href="/schedule">Schedule</a>
                    </li>
                    <li class="nav-item{{ nav_active == 'shoutbox' ? ' active' : '' }}">
                        <a class="nav-link" href="/shoutbox">Shoutbox</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a
                            href="#"
                            class="nav-link dropdown-toggle"
                            data-toggle="dropdown"
                        >
                            Hello, <strong>{{ username }}</strong>
                        </a>
                        <div class="dropdown-menu">
                            <a href="/change-nickname" class="dropdown-item">
                                Change nickname
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    {% block website_content %}
        {% block website_main %}{% endblock %}
        {% block website_footer %}
            <footer class="bg-light mt-auto py-5">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-sm">
                            <h6>Questions?</h6>
                            Please talk to someone from GEPWNAGE
                        </div>
                        <div class="col-sm">
                            <div class="d-flex align-items-center justify-content-end">
                                <img
                                    class="mr-sm-4"
                                    style="max-width: 200px;"
                                    src="{{ static('static/media/prodrive-logo.svg') }}"
                                    alt="Prodrive Technologies"
                                >
                                <img
                                    style="max-width: 180px;"
                                    src="{{ static('static/media/letstalk-logo.png') }}"
                                    alt="Let's Talk"
                                >
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        {% endblock %}

    {% endblock %}
{% endblock %}
