{% extends "../website.twig" %}

{% set nav_active = 'schedule' %}

{% block website_main %}
    <main class="my-4">
        <div class="container">
            <h3 class="mb-3">Schedule</h3>

            <div class="list-group">
                {% for activity in activities %}
                    <div class="list-group-item">
                        <h5>{{ activity.title }}</h5>
                        <p class="mb-1">{{ activity.details }}</p>
                        <a href="/activity/{{ activity.id }}">More info</a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </main>
{% endblock %}
